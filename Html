    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p id="modalText">Event details will appear here.</p>
        </div>
    </div>
<script>
    
        var modal = document.getElementById("myModal");

        var span = document.getElementsByClassName("close")[0];

        function openModal(eventInfo) {
            document.getElementById("modalText").innerText = eventInfo;
            modal.style.display = "block";
        }

        span.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
document.addEventListener("DOMContentLoaded", function() {
            var dates = document.querySelectorAll("td"); // 
            dates.forEach(function(date) {
                date.addEventListener("click", function() {
                    var dateClicked = this.innerText.trim();
                    switch (dateClicked) {
                        case '18':
                            openModal( "Help keep Queens Botanical Garden clean, green, and growing! Join QBG's horticulture staff for an engaging, educational event where you will learn gardening basics and work hands-on with plants. Make new friends and put your green thumb to good use in a variety of seasonal projects, including weeding, watering, pruning, planting, mulching, and more! Explore the beauty of QBGâ€™s ever-changing scenery as our flowers bloom, trees grow, and community comes together.\n\nThis is an outdoor event, please dress for the weather, wear sunscreen, bring water or snacks, and dress comfortably.QBG staff will provide gloves.\n\nFREE. Registration required.\n\nSign up using the form linked below!");
                            break;
                        case '15':
                            openModal("Fundraiser for Local Shelter on August 15th.");
                            break;
                        case '10':
                            openModal("Volunteer at Food Bank on September 10th.");
                            break;
                        default:
                            openModal("No events scheduled for this date.");
                            break;
                    }
                });
            });
        });
    
    </script>



    
